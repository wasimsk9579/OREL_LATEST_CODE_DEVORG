<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Rep_Discount__c</field>
        <field>Price__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>project.head@cloud.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval of discount</label>
        <name>Approval_of_discount</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 2)  AND 3</booleanFilter>
        <criteriaItems>
            <field>Quote.Rep_Discount__c</field>
            <operation>greaterOrEqual</operation>
            <value>2.5</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Rep_Discount__c</field>
            <operation>lessOrEqual</operation>
            <value>25</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Orl_Opportunity_record_type__c</field>
            <operation>equals</operation>
            <value>Repeater</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Disc_approval_status_update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_discount_approval_alert</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Disc_rejection_status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_discount_rejection_alert</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Initial_disc_field_update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_project_head_for_quote_discount</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>orl discount AP</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
