<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Orl_Validation_for_VAT_Number</fullName>
    <active>true</active>
    <errorConditionFormula>IF(  ISPICKVAL(Orl_Tax_Type__c , &quot;Tax Registered&quot;) , ISBLANK( VAT_Number__c )  ,false)</errorConditionFormula>
    <errorDisplayField>VAT_Number__c</errorDisplayField>
    <errorMessage>Please Enter the VAT Number as you are tax registered.</errorMessage>
</ValidationRule>
