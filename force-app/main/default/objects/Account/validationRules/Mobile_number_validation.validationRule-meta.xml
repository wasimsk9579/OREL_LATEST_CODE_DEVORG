<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_number_validation</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(REGEX( Mobile__c  ,&quot;(\\D?[0-9]{3}\\D?)[\\s][0-9]{3}-[0-9]{4}&quot;))</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Please enter the Number only</errorMessage>
</ValidationRule>
